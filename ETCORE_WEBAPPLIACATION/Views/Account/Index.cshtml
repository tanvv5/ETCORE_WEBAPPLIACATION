@{
    ViewData["Title"] = "Acount List Page";
    var Listusers = ViewData["Listuser"] as List<ApplicationUser>;
}

<div class="wrapper">
    <div class="container">
        <div class="row g-1">
            @foreach (ApplicationUser iuser in Listusers)
            {
                var pathinfo =  (iuser.Avartar ?? "~/images/Avarta/noimage.png");
                <div class="col-md-3">
                    <div class="card p-3">
                        <div class="text-center">
                            <a asp-action="Detail" asp-route-id="@iuser.Id" asp-controller="Home">
                                <img src="@pathinfo" width="200" asp-append-version="true">
                            </a>
                        </div>
                        <div class="product-details">
                            <span>@iuser.UserName</span>
                            <div class="buttons d-flex flex-row">
                                <a class="btn btn-primary m-2" asp-route-id="@iuser.Id" asp-controller="Account" asp-action="View">View</a>
                                <a class="btn btn-primary m-2" asp-route-id="@iuser.Id" asp-controller="Account" asp-action="Edit">Edit</a>
                                <a class="btn btn-primar m-2" asp-route-id="@iuser.Id" asp-controller="Account" asp-action="Delete">Delete</a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>

