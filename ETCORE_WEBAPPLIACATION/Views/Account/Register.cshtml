@model RegisterViewModel
@{
    ViewBag.Title = "Registion User";
}
<form enctype="multipart/form-data" asp-controller="Account" asp-action="Register" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Email" class="col-form-label col-sm-2">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" aria-describedby="emailHelp">
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-form-label col-sm-2">Password</label>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="ConfirmPassword" class="col-form-label col-sm-2">ConfirmPassword</label>
        <div class="col-sm-10">
            <input asp-for="ConfirmPassword" class="form-control">
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="StockQuatity" class="col-form-label col-sm-2">Hình ảnh đại diện</label>
        <div class="col-sm-10">
            <input asp-for="image" class="form-control custom-file-input" />
            <label class="custom-file-label">Choose file...</label>
        </div>
    </div>
    <div style="margin-top:15px">
        <output name="result"></output>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>