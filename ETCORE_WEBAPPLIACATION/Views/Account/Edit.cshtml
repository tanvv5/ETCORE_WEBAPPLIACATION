@model ApplicationUserEditModel
@{
    ViewBag.Title = "Registion User";
    var pathinfo =  (Model.Avartar ?? "~/images/Avarta/noimage.png");
}
<form enctype="multipart/form-data" asp-controller="Account" asp-action="Edit" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <input hidden asp-for="Id" />
        <input hidden asp-for="Avartar" />
        <label asp-for="Email" class="col-form-label col-sm-2">Email</label>
        <div class="col-sm-10">
            <input disabled asp-for="Email" class="form-control" aria-describedby="emailHelp">
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Depathment" class="col-form-label col-sm-2">Department</label>
        <div class="col-sm-10">
            <input asp-for="Depathment" class="form-control">
            <span asp-validation-for="Depathment"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="StockQuatity" class="col-form-label col-sm-2">Hình ảnh đại diện</label>
        <div class="col-sm-10">
            <input asp-for="image" class="form-control custom-file-input" />
            <label class="custom-file-label">Click here change image...</label>
            <img src="@pathinfo" class="img-thumbnail" asp-append-version="true" />
        </div>
    </div>
    <div style="margin-top:15px">
        <output name="result"></output>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>