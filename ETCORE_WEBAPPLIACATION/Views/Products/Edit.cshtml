@model ProductsEditModel
@{
    ViewData["Title"] = "Edit Product";
    string parthfirst = "/user/image/noimage.png";
    if (!string.IsNullOrEmpty(Model.ExistImage))
    {
        parthfirst = Model.ExistImage.Split(";")[0];
    }
    var pathinfo = "~" + parthfirst;
}
<form enctype="multipart/form-data" asp-controller="Products" asp-action="Edit" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <input hidden asp-for="ProId" />
        <input hidden asp-for="ExistImage" />
        <label asp-for="ProName" class="col-form-label col-sm-2">ProductName</label>
        <div class="col-sm-10">
            <input asp-for="ProName" class="form-control" aria-describedby="emailHelp">
            <span asp-validation-for="ProName"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ProCategory" class="col-form-label col-sm-2">ProCategory</label>
        <div class="col-sm-10">
            <input asp-for="ProCategory" type="text" class="form-control">
            <span asp-validation-for="ProCategory"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="Unit" class="col-form-label col-sm-2">Unit</label>
        <div class="col-sm-10">
            <input asp-for="Unit" type="text" class="form-control">
            <span asp-validation-for="Unit"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="StockQuatity" class="col-form-label col-sm-2">StockQuatity</label>
        <div class="col-sm-10">
            <input asp-for="StockQuatity" type="text" class="form-control">
            <span asp-validation-for="StockQuatity"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-form-label col-sm-2">Description</label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" type="text" multiple aria-describedby="emailHelp">
            <span asp-validation-for="Description"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="StockQuatity" class="col-form-label col-sm-2">Hình ảnh đại diện</label>
        <div class="col-sm-10">
            <input multiple asp-for="image" class="form-control custom-file-input" />
            <label class="custom-file-label">Click here change image...</label>
            <img src="@pathinfo" class="img-thumbnail" asp-append-version="true" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filelable = $(this).next('.custom-file-label');
                var files = $(this)[0].files;
                if (files.length > 1) {
                    filelable.html(files.length + " đã được chọn");
                }
                else {
                    filelable.html(files[0].name+ " đã được chọn");
                }
                /*var filename = $(this).val().split("\\").pop();   */
            });
        });
    </script>
}