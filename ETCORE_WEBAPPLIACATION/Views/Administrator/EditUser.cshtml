@model EditUserViewModel
@{
    ViewBag.Title = "Edit User";
    var pathinfo = (Model.Avartar ?? "~/images/Avarta/noimage.png");
}
<form enctype="multipart/form-data" asp-controller="Administrator" asp-action="EditUser" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Id" class="col-form-label col-sm-2">Id</label>
        <div class="col-sm-10">
            <input disabled asp-for="Id" class="form-control" aria-describedby="emailHelp">
            <span asp-validation-for="Id"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-form-label col-sm-2">UserName</label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" aria-describedby="emailHelp">
            <span asp-validation-for="UserName"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-form-label col-sm-2">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" aria-describedby="emailHelp">
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Depathment" class="col-form-label col-sm-2">Depathment</label>
        <div class="col-sm-10">
            <input asp-for="Depathment" class="form-control" aria-describedby="emailHelp">
            <span asp-validation-for="Depathment"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="StockQuatity" class="col-form-label col-sm-2">Hình ảnh đại diện</label>
        <div class="col-sm-10">
            <img src="@pathinfo" class="img-thumbnail" asp-append-version="true" style="width:200px;" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Update User</button>
            <a asp-action="ListUser" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>User Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the Role</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManagementRole" asp-controller="Administrator" asp-route-UserId="@Model.Id" class="btn btn-primary" style="width:auto;">Management Roles</a>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>User Claims</h3>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the Claim</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManagementClaim" asp-controller="Administrator" asp-route-UserId="@Model.Id" class="btn btn-primary" style="width:auto;">Management Claim</a>
        </div>
    </div>
    <div style="margin-top:15px">
        <output name="result"></output>
    </div>
</form>