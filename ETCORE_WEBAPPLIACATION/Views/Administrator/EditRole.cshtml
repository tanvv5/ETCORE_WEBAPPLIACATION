@model EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}
<form enctype="multipart/form-data" asp-controller="Administrator" asp-action="EditRole" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Id" class="col-form-label col-sm-2">Id</label>
        <div class="col-sm-10">
            <input disabled asp-for="Id" class="form-control" aria-describedby="emailHelp">
            <span asp-validation-for="Id"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-form-label col-sm-2">RoleName</label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" aria-describedby="emailHelp">
            <span asp-validation-for="RoleName"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Update Role</button>
            <a asp-action="IndexRole" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>Users in Role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Not Users in Role</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUserRole" asp-controller="Administrator" asp-route-Roleid="@Model.Id" class="btn btn-primary" style="width:auto;">Add User</a>
            <a asp-action="RemoveUserRole" class="btn btn-primary" style="width:auto;">Remove User</a>
        </div>
    </div>
    <div style="margin-top:15px">
        <output name="result"></output>
    </div>
</form>