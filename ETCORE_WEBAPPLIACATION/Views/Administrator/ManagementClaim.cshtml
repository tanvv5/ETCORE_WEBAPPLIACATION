@model UserClaimsModelView
@{
    ViewBag.Title = "Managament Claims";
}
<form asp-controller="Administrator" asp-action="ManagementClaim" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="card">
        <div class="card-header">
            <h3>Add or Remove Claim to User</h3>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="@Model.UserId" />
            @if (Model.claims.Any())
            {
                for (int i = 0; i < Model.claims.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model.claims[i].claimType" />
                        <input asp-for="@Model.claims[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label">@Model.claims[i].claimType</label>
                    </div>
                }
            }
            else
            {
                <h5 class="card-title">Not claim in Users</h5>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto;" />
            <a asp-action="EditUser" asp-controller="Administrator" asp-route-id="@Model.UserId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    <div style="margin-top:15px">
        <output name="result"></output>
    </div>
</form>