@model List<UserRolesViewModel>
@{
    ViewBag.Title = "Managament Roles";
    var UserId = ViewBag.UserId;
}
<form asp-controller="Administrator" asp-action="ManagementRole" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="card">
        <div class="card-header">
            <h3>Add or Remove Users from this Role</h3>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="@UserId" />
            @if (Model.Any())
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label">@Model[i].RoleName</label>
                    </div>
                }
            }
            else
            {
                <h5 class="card-title">Not Users in Role</h5>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto;" />
            <a asp-action="EditUser" asp-controller="Administrator" asp-route-id="@UserId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    <div style="margin-top:15px">
        <output name="result"></output>
    </div>
</form>